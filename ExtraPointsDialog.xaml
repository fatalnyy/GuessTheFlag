<Window x:Class="GuessTheFlag.ExtraPointsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessTheFlag"
        mc:Ignorable="d"
        Title="Start" Height="200" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Wpisz stolicę danego kraju w celu uzyskania dodatkowych 5 punktów:" Grid.Row="0" Grid.ColumnSpan="3" FontSize="12"/>
        <Label Content="Stolica: " Grid.Row="1" FontSize="12" Margin="80,10,0,10"/>
        <TextBox Name ="textbox1" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,12,15,22" />
        <Button  Content="Potwierdź" Grid.Row="2" Grid.Column="1" Margin="15" Click="ExtraPointsConfirmBtn_Click"/>



    </Grid>
</Window>